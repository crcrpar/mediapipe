    name = "mediapipe",
    manifest = "AndroidManifest.xml",
    custom_package = "com.google.mediapipe",
    srcs = ["java/com/google/mediapipe/**/*.java"],
    deps = ["//mediapipe/java/com/google/mediapipe/framework:jni"],
)

